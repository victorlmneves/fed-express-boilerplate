block config
  //- Setup site's base URL to match the "baseUrl" key within `package.json`
  //- Otherwise default to relative pathing
  - var baseUrl = config.baseUrl || './'

  //MODULE INCLUDES HERE
  include ../_modules/cards/cards.pug
  include ../_modules/menu/menu.pug
  include ../_modules/text/text.pug
  include ../_modules/search/search.pug
  include ../_modules/title/title.pug

doctype html
<html class='no-js' lang='en'>

head
  meta(charset='utf-8')
  title FED Yeogurt Boilerplate with Pug
  meta(name='description', content= 'A new Yeogurt application')
  meta(name='viewport', content='user-scalable=no, width=device-width, initial-scale=1, maximum-scale=1')
  link(rel='icon', type='image/x-icon', href='/favicon.ico')
  block stylesheets
    link(rel='stylesheet', href= '../styles/lib/normalize.css')
    link(rel='stylesheet', href= '../styles/main.css')

